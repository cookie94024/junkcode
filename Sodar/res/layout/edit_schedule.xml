<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent"
	android:layout_width="fill_parent"
	android:fillViewport="true">
<LinearLayout 
	android:id="@+id/linearLayout1"
	android:paddingLeft="25sp" 
	android:paddingRight="25sp" 
	android:paddingTop="20sp" 
	android:orientation="vertical" 
	android:scrollbars="vertical" 
	android:visibility="visible" 
	android:background="#284A90" 
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent">
    
	<LinearLayout 
    	android:id="@+id/linearLayout2" 
    	android:layout_width="wrap_content" 
    	android:layout_height="wrap_content" 
    	android:layout_marginBottom="10sp">
    	
        <ImageView 
        	android:id="@+id/imageView1" 
        	android:layout_height="50sp" 
        	android:layout_width="50sp"
        	android:src="@drawable/checkin">
        </ImageView>
        
        <TextView 
        	android:layout_width="wrap_content" 
        	android:layout_height="wrap_content" 
        	android:id="@+id/placedisplay"
        	android:layout_gravity="center" 
        	android:layout_marginLeft="10sp" 
        	android:textSize="15sp">
        </TextView>
        
	</LinearLayout>
	
	<Button 
    	android:text="更改地點" 
    	android:id="@+id/pickplace" 
    	android:layout_width="fill_parent" android:layout_height="40sp">
    </Button>
	
	<LinearLayout 
    	android:id="@+id/linearLayout7" 
    	android:layout_width="fill_parent" 
    	android:layout_height="40sp"
    	android:layout_gravity="center" android:layout_marginBottom="10sp">
        
        <TextView 
			android:id="@+id/titletext"
			android:text="標題："
			android:layout_width="wrap_content" android:layout_height="wrap_content">
		</TextView>
	
		<EditText 
			android:id="@+id/title" 
			android:layout_width="fill_parent"
			android:hint="輸入標題..." 
			android:layout_height="fill_parent">
		</EditText>
        
	</LinearLayout>
	
	<LinearLayout 
		android:layout_width="fill_parent" 
		android:id="@+id/linearLayout3" 
		android:layout_gravity="center" 
		android:layout_height="wrap_content">
		
        <TextView 
        	android:text="開始日期：" 
        	android:id="@+id/textView1" 
        	android:layout_width="wrap_content" 
        	android:layout_height="wrap_content" 
        	android:layout_gravity="center">
        </TextView>
        
        <TextView
        	android:id="@+id/startdatedisplay" 
       		android:layout_width="wrap_content" 
        	android:layout_height="wrap_content" 
        	android:layout_gravity="center">
        </TextView>
        <TextView android:id="@+id/starttimedisplay" android:text="TextView" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center"></TextView>
        
        <RelativeLayout 
        	android:id="@+id/relativeLayout1" 
        	android:layout_width="wrap_content" 
        	android:layout_height="wrap_content">
        	
        	<Button 
        		android:layout_width="wrap_content" 
        		android:id="@+id/pickstartdate" 
        		android:layout_alignParentRight="true" 
        		android:layout_height="35sp" 
        		android:text="更改">
        	</Button>
        
        </RelativeLayout>
        
	</LinearLayout>
	
	<LinearLayout 
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content" 
		android:id="@+id/linearLayout4" 
		android:layout_marginBottom="5sp">
		
		<RelativeLayout 
			android:id="@+id/relativeLayout2" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content">
			
		</RelativeLayout>
		
	</LinearLayout>
	
	<LinearLayout 
		android:layout_width="fill_parent" 
		android:id="@+id/linearLayout5" 
		android:layout_gravity="center" 
		android:layout_height="wrap_content">
		
        <TextView 
        	android:text="結束日期：" 
        	android:id="@+id/textView3" 
        	android:layout_width="wrap_content" 
        	android:layout_height="wrap_content" 
        	android:layout_gravity="center">
        </TextView>
        
        <TextView
        	android:id="@+id/enddatedisplay" 
       		android:layout_width="wrap_content" 
        	android:layout_height="wrap_content" 
        	android:layout_gravity="center">
        </TextView>
        <TextView android:id="@+id/endtimedisplay" android:text="TextView" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center"></TextView>
        
        <RelativeLayout 
        	android:id="@+id/relativeLayout3" 
        	android:layout_width="wrap_content" 
        	android:layout_height="wrap_content">
        	
        	<Button 
        		android:layout_width="wrap_content" 
        		android:id="@+id/pickenddate" 
        		android:layout_alignParentRight="true" 
        		android:layout_height="35sp" 
        		android:text="更改">
        	</Button>
        
        </RelativeLayout>
        
	</LinearLayout>
	
	<LinearLayout 
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content" 
		android:id="@+id/linearLayout6" 
		android:layout_marginBottom="10sp">
		
		<RelativeLayout 
			android:id="@+id/relativeLayout4" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content">
			
		</RelativeLayout>
		
	</LinearLayout>
	
	<TextView 
		android:id="@+id/textView5" 
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content" 
		android:text="描述：" 
		android:layout_marginBottom="5sp">
	</TextView>
	
	<EditText 
		android:id="@+id/description" 
		android:layout_width="fill_parent" 
		android:inputType="textMultiLine" 
		android:layout_height="wrap_content" 
		android:lines="2" 
		android:hint="輸入想留下的訊息..." android:layout_marginBottom="10sp">
	</EditText>
	
	<Button 
		android:id="@+id/confirm" 
		android:text="確認修改" 
		android:layout_width="fill_parent" android:layout_height="40sp">
	</Button>
	
	<Button 
    	android:text="刪除行程" 
    	android:id="@+id/delete" 
    	android:layout_width="fill_parent" android:layout_height="40sp">
    </Button>

</LinearLayout>

</ScrollView>