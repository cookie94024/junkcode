<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="sodar.client.android" android:versionCode="1"
	android:versionName="1.0">
	<application android:icon="@drawable/sodar" android:label="@string/app_name">
		<activity android:name=".SignActivity" android:label="@string/app_name" android:screenOrientation="nosensor">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<uses-library android:name="com.google.android.maps" />
		<activity android:name="UserActivity" android:screenOrientation="nosensor"/>
		<activity android:name="SearchActivity" android:screenOrientation="nosensor"></activity>
		<activity android:name="MainActivity" android:screenOrientation="nosensor"></activity>
		<activity android:name="SettingActivity" android:screenOrientation="nosensor"></activity>
		<activity android:name="CheckInActivity" android:screenOrientation="nosensor"></activity>
		<activity android:name="PickLocationActivity" android:screenOrientation="nosensor"></activity>
		<activity android:name="ScheduleActivity" android:screenOrientation="nosensor"></activity>
		<activity android:name="CreateEventActivity" android:screenOrientation="nosensor"></activity>
		<activity android:name="ShowEventActivity" android:screenOrientation="nosensor"></activity>
		<activity android:name="EditEventActivity" android:screenOrientation="nosensor"></activity>
		<activity android:name="ShowScheduleActivity" android:screenOrientation="nosensor"></activity>
		<activity android:name="EditScheduleActivity" android:screenOrientation="nosensor"></activity>
		<service android:name="NotifyService" class=".NotifyService"/>
	</application>
	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.VIBRATE" />
	<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.SEND_SMS"/>
	<uses-permission android:name="android.permission.CALL_PHONE"/>
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
</manifest>